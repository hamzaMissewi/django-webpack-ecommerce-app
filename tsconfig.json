{
  "compilerOptions": {
    "lib": [
      //      "es5"
      "es6",
      "dom"
    ],
    "target": "ES2020",
    "jsx": "react-jsx",
    // For React 17 and later
    "module": "commonjs",
    //  "target": "es6",
    //    "module": "ESNext",
    //    "target": "ESNext",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "noUnusedParameters": false,
    // Set to false to ignore unused parameter errors
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Skip type checking of declaration files
    "noUnusedLocals": false
    // Set to false to ignore unused local variable errors
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
  //  "typeRoots": [
  //    "test/jest/types.d.ts"
  //  ]
}

